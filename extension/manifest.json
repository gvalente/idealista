{
  "manifest_version": 3,
  "name": "Idealista Trust Shield",
  "version": "1.3.7",
  "description": "Your intelligent co-pilot for navigating Barcelona's rental market with confidence. Provides real-time trust and quality scoring for Idealista listings.",
  "default_locale": "en",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.idealista.com/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.idealista.com/en/inmueble/*",
        "*://*.idealista.com/inmueble/*",
        "*://*.idealista.com/en/venta-viviendas/*",
        "*://*.idealista.com/venta-viviendas/*",
        "*://*.idealista.com/en/alquiler-viviendas/*",
        "*://*.idealista.com/alquiler-viviendas/*",
        "*://*.idealista.com/en/point/alquiler-viviendas/*",
        "*://*.idealista.com/point/alquiler-viviendas/*",
        "*://*.idealista.com/en/point/venta-viviendas/*",
        "*://*.idealista.com/point/venta-viviendas/*",
        "*://*.idealista.com/en/usuario/favoritos/*",
        "*://*.idealista.com/usuario/favoritos/*"
      ],
      "js": ["dist/content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Idealista Trust Shield",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "default-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; script-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "fonts/*",
        "dist/*"
      ],
      "matches": [
        "*://*.idealista.com/*"
      ]
    }
  ]
} 